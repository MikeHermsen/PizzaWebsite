CREATE TABLE IF NOT EXISTS pizza_hut_products (
    id INT AUTO_INCREMENT,
    p_name VARCHAR(255) NOT NULL,
    p_price FLOAT(4),
    p_stock INT(4),
    description TEXT,
    img_url VARCHAR(255),
    PRIMARY KEY (id)
);



